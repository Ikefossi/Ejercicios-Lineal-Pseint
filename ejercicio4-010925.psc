	Algoritmo PrecioProductoUsuario
		
		// 1. Declaramos la variable que admitira decimales
		Definir precio Como Real;
		
		// 2. Pedimos al usuario que ingrese el precio (Entrada de datos)
		Escribir "Por favor, ingresa el precio del producto:";
		Leer precio;
		
		// 3. Imprimimos el mensaje final (Salida de datos)
		Escribir "El precio del producto es: ", precio;
		
FinAlgoritmo
