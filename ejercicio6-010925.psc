	Algoritmo MostrarLetra
		
		// 1. Declaramos la variable
		// El tipo 'Caracter' se usa para una sola letra
		Definir letra Como Caracter;
		
		// 2. Entrada de datos
		Escribir "Por favor, ingresa una letra:";
		
		// Leemos la letra que el usuario escribe
		Leer letra;
		
		// 3. Salida de datos
		Escribir "La letra asignada es: ", letra;
		
FinAlgoritmo
